<h1>Details</h1>
<%= link_to 'Edit this project', edit_project_path(@project) %>
<p>
  <strong>Project Number:</strong>
  <%= @project.project_num %>
</p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @project.location %>
</p>

<strong>Task List</strong>
<div class='tasks'>
  <%= nested_tasks @project.tasks.arrange(:order => :created_at) %>
</div>
<strong>Add task:</strong>
<%= simple_form_for @project.tasks.build do |f| %>
  <%= f.input :user_id %>
  <%= f.input :project_id %>
  <%= f.input :title %>
  <%= f.button :submit %>
<% end %>